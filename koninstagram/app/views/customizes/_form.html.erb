<%= form_for(@customize) do |f| %>
  <% if @customize.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@customize.errors.count, "error") %> prohibited this customize from being saved:</h2>

      <ul>
      <% @customize.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <label for="customize_color_id">色</label>
    <%= f.select :color_id, @colors.map{|t| [t.name, t.id]}, {}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <label for="customize_material_id">素材</label>
    <%= f.select :material_id, @materials.map{|t| [t.name, t.id]}, {}, {:class => 'form-control'} %>
  </div>

  <div class="form-group">
    <label for="customize_waku_id">枠</label>
    <%= f.select :waku_id, @wakus.map{|t| [t.name, t.id]}, {}, {:class => 'form-control'} %>
  </div>

  <div class="field">
    <%= f.hidden_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit "完了", :class =>"btn btn-default"%>
  </div>
<% end %>
